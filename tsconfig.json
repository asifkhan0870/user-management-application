{
    "compilerOptions": {
      "target": "es6",                       // The target ECMAScript version
      "module": "esnext",                    // The module code generation
      "jsx": "react-jsx",                    // Supports React JSX
      "strict": true,                        // Enables all strict type-checking options
      "moduleResolution": "node",            // Resolves modules like Node.js
      "esModuleInterop": true,               // Enables emit interoperability between CommonJS and ES Modules
      "forceConsistentCasingInFileNames": true, // Enforces consistent casing in file names
      "skipLibCheck": true,                  // Skips type checking of declaration files
      "outDir": "./dist",                    // Output directory for compiled files
      "baseUrl": "./src",                    // Base directory to resolve non-relative module names
      "resolveJsonModule": true              // Allows importing .json files
    },
    "include": ["src"],                     // Specifies which files are included
    "exclude": ["node_modules"]             // Specifies which files are excluded
  }
  